<div class="card">
    <h2 class="card-title">{{name}}</h2>
    <div class="card-body">
        <div>
            <p class="card-text">Capital: {{capital}}</p>
            <p class="card-text">Population: {{population}}</p>
            <p class="card-text">Languages:
            <ul class="card-text lang">
                {{#each languages}}
                <li class="card-lang-item">
                    {{name}}
                </li>
                {{/each}}
            </ul>
            </p>
        </div>
        <div>
            <img class="card-img" src="{{flag}}" </img>
        </div>
    </div>
</div>